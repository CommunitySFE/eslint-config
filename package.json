{
	"name": "eslint-config",
	"version": "1.0.0",
	"license": "MIT",
	"scripts": {
		"build:watch": "tsc --project ./tsconfig.json --watch",
		"build": "tsc --project ./tsconfig.json && eslint src/**/*.*",
		"dev": "tsc --project ./tsconfig.json && pm2 start ecosystem.config.js && pm2 logs",
		"lint": "eslint src/**/*.*",
		"dev:stop": "pm2 stop all && pm2 delete all"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.12.0",
		"@typescript-eslint/parser": "^2.12.0",
		"eslint": "^6.7.2",
		"eslint-config-prettier": "^6.7.0",
		"pm2": "^4.2.1",
		"prettier": "^1.19.1",
		"ts-node": "^8.5.4",
		"typescript": "^3.7.3"
	}
}
